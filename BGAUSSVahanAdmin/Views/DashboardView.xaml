<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BGAUSSVahanAdmin.Views.DashboardView"
             BackgroundColor="#E9EEF5">

    <Grid>

        <!-- ================= MAIN CONTENT ================= -->
        <ScrollView>
            <VerticalStackLayout Padding="20,30"
                                 Spacing="25">

                <!-- ================= HEADER ================= -->
                <Grid ColumnDefinitions="Auto,*">

                    <Button Text="â˜°"
                            FontSize="22"
                            BackgroundColor="Blue"
                            Clicked="OnToggleSidebar"/>

                    <VerticalStackLayout Grid.Column="1">
                        <Label Text=" Admin Dashboard"
                               FontSize="26"
                               FontAttributes="Bold"
                               TextColor="#1F2937"/>
                        <Label Text="  Manage users, roles, and system access"
                               FontSize="14"
                               TextColor="#6B7280"/>
                    </VerticalStackLayout>

                </Grid>


                <!-- ================= STAT CARDS ================= -->
                <Grid ColumnSpacing="20"
                      RowSpacing="20"
                      ColumnDefinitions="*,*"
                      RowDefinitions="Auto,Auto">

                    <!-- Total Users -->
                    <Border BackgroundColor="White"
                            Padding="20"
                            HeightRequest="170">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="20"/>
                        </Border.StrokeShape>

                        <VerticalStackLayout Spacing="10"
                                             HorizontalOptions="Center"
                                             VerticalOptions="Center">

                            <Image Source="total_users.png"
                                   HeightRequest="55"
                                   WidthRequest="55"/>

                            <Label Text="1250"
                                   FontSize="22"
                                   FontAttributes="Bold"
                                   HorizontalTextAlignment="Center"/>

                            <Label Text="Total Users"
                                   TextColor="#6B7280"
                                   HorizontalTextAlignment="Center"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Active Users -->
                    <Border Grid.Column="1"
                            BackgroundColor="White"
                            Padding="20"
                            HeightRequest="170">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="20"/>
                        </Border.StrokeShape>

                        <VerticalStackLayout Spacing="10"
                                             HorizontalOptions="Center"
                                             VerticalOptions="Center">

                            <Image Source="active.png"
                                   HeightRequest="55"
                                   WidthRequest="55"/>

                            <Label Text="980"
                                   FontSize="22"
                                   FontAttributes="Bold"
                                   HorizontalTextAlignment="Center"/>

                            <Label Text="Active Users"
                                   TextColor="#6B7280"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Admin Users -->
                    <Border Grid.Row="1"
                            BackgroundColor="White"
                            Padding="20"
                            HeightRequest="170">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="20"/>
                        </Border.StrokeShape>

                        <VerticalStackLayout Spacing="10"
                                             HorizontalOptions="Center"
                                             VerticalOptions="Center">

                            <Image Source="admin.png"
                                   HeightRequest="55"
                                   WidthRequest="55"/>

                            <Label Text="15"
                                   FontSize="22"
                                   FontAttributes="Bold"
                                   HorizontalTextAlignment="Center"/>

                            <Label Text="Admin Users"
                                   TextColor="#6B7280"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Region Users -->
                    <Border Grid.Row="1"
                            Grid.Column="1"
                            BackgroundColor="White"
                            Padding="20"
                            HeightRequest="170">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="20"/>
                        </Border.StrokeShape>

                        <VerticalStackLayout Spacing="10"
                                             HorizontalOptions="Center"
                                             VerticalOptions="Center">

                            <Image Source="region.png"
                                   HeightRequest="55"
                                   WidthRequest="55"/>

                            <Label Text="255"
                                   FontSize="22"
                                   FontAttributes="Bold"
                                   HorizontalTextAlignment="Center"/>

                            <Label Text="Region Users"
                                   TextColor="#6B7280"/>
                        </VerticalStackLayout>
                    </Border>

                </Grid>


                <!-- ================= USER MANAGEMENT ================= -->
                <Border BackgroundColor="White"
                        Padding="25">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="20"/>
                    </Border.StrokeShape>

                    <VerticalStackLayout Spacing="18">

                        <HorizontalStackLayout Spacing="12">
                            <Image Source="mangement.png"
                                   HeightRequest="40"/>
                            <Label Text="User Management"
                                   FontSize="20"
                                   FontAttributes="Bold"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>

                        <Label Text="Create, edit, and manage user accounts."
                               TextColor="#6B7280"/>

                        <Button Text="Manage Users"
                                BackgroundColor="#2563EB"
                                TextColor="White"
                                CornerRadius="14"
                                HeightRequest="50"
                                Clicked="OnManageUsersClicked"/>
                    </VerticalStackLayout>
                </Border>


                <!-- ================= ACCESS CONTROL ================= -->
                <Border BackgroundColor="White"
                        Padding="25">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="20"/>
                    </Border.StrokeShape>

                    <VerticalStackLayout Spacing="20">

                        <HorizontalStackLayout Spacing="10">
                            <Image Source="access.png"
                                   HeightRequest="40"/>
                            <Label Text="Access Control"
                                   FontSize="20"
                                   FontAttributes="Bold"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>

                        <!-- Clean 2 Column Layout -->
                        <Grid ColumnSpacing="25"
                              RowSpacing="15"
                              ColumnDefinitions="*,*"
                              RowDefinitions="Auto,Auto,Auto">

                            <Label Text="ðŸ”µ All India"
                                   Grid.Row="0"
                                   Grid.Column="0"
                                   TextColor="Blue"/>

                            <Label Text="ðŸŸ¢ North Region"
                                   Grid.Row="0"
                                   Grid.Column="1"
                                   TextColor="Green"/>

                            <Label Text="ðŸŸ£ South Region"
                                   Grid.Row="1"
                                   Grid.Column="0"
                                   TextColor="Purple"/>

                            <Label Text="ðŸ”´ East Region"
                                   Grid.Row="1"
                                   Grid.Column="1"
                                   TextColor="Red"/>

                            <Label Text="ðŸŸ¤ West Region"
                                   Grid.Row="2"
                                   Grid.Column="0"
                                   TextColor="DarkGreen"/>

                        </Grid>

                    </VerticalStackLayout>
                </Border>

            </VerticalStackLayout>
        </ScrollView>


        <!-- ================= OVERLAY ================= -->
        <BoxView x:Name="Overlay"
                 BackgroundColor="#80000000"
                 Opacity="0"
                 IsVisible="False">
            <BoxView.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnToggleSidebar"/>
            </BoxView.GestureRecognizers>
        </BoxView>

        <!-- ================= SIDEBAR ================= -->
        <Grid x:Name="Sidebar"
                BackgroundColor="White"
                WidthRequest="280"
                HorizontalOptions="Start"
                IsVisible="False">

            <ScrollView>

                <VerticalStackLayout Padding="20,50"
                                     Spacing="25">

                    <!-- 4 GRID DASHBOARD BUTTON -->
                    <HorizontalStackLayout Spacing="15"
                                   VerticalOptions="Center">

                        <Grid x:Name="GridIcon"
                                HeightRequest="50"
                                WidthRequest="50"
                                BackgroundColor="Black"
                                Padding="8"
                                HorizontalOptions="Start">

                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnDashboardClicked"/>
                            </Grid.GestureRecognizers>

                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <BoxView Grid.Row="0" Grid.Column="0" Margin="4" BackgroundColor="White"/>
                            <BoxView Grid.Row="0" Grid.Column="1" Margin="4" BackgroundColor="White"/>
                            <BoxView Grid.Row="1" Grid.Column="0" Margin="4" BackgroundColor="White"/>
                            <BoxView Grid.Row="1" Grid.Column="1" Margin="4" BackgroundColor="White"/>
                        </Grid>

                    </HorizontalStackLayout>

                    <!-- ================= MENU OPTIONS ================= -->

                    <!-- Market Share -->
                    <VerticalStackLayout Spacing="2">
                        <Label Text="Market Share YTD"
                               FontSize="16"
                               FontAttributes="None"
                               FontFamily="Times New Roman"
                               TextColor="Black"/>
                        <Label Text="Market Share of All Makers"
                               FontSize="13"
                               TextColor="#6B7280"/>
                    </VerticalStackLayout>

                    <!-- Monthly -->
                    <VerticalStackLayout Spacing="2">
                        <Label Text="BGauss Monthly"
                               FontSize="16"
                               FontAttributes="None"
                               FontFamily="Times New Roman"
                               TextColor="Black"/>
                        <Label Text="BGauss YTD Monthwise Sales"
                               FontSize="13"
                               TextColor="#6B7280"/>
                    </VerticalStackLayout>

                    <!-- Industry RTO -->
                    <VerticalStackLayout Spacing="2">
                        <Label Text="Industry RTO Top 20"
                               FontSize="16"
                               FontAttributes="None"
                               FontFamily="Times New Roman"
                               TextColor="Black"/>
                        <Label Text="Top 20 RTO Performance"
                               FontSize="13"
                               TextColor="#6B7280"/>
                    </VerticalStackLayout>

                    <!-- BGauss RTO -->
                    <VerticalStackLayout Spacing="2">
                        <Label Text="BGauss RTO Top 20"
                               FontSize="16"
                               FontAttributes="None"
                               FontFamily="Times New Roman"
                               TextColor="Black"/>
                        <Label Text="BGauss Top 20 RTO Analysis"
                               FontSize="13"
                               TextColor="#6B7280"/>
                    </VerticalStackLayout>

                    <!-- State Data -->
                    <VerticalStackLayout Spacing="2">
                        <Label Text="BGauss State Data"
                               FontSize="16"
                               FontAttributes="None"
                               FontFamily="Times New Roman"
                               TextColor="Black"/>
                        <Label Text="BGauss State Wise Performance"
                               FontSize="13"
                               TextColor="#6B7280"/>
                    </VerticalStackLayout>

                    <!-- District -->
                    <VerticalStackLayout Spacing="2">
                        <Label Text="District VAHAN Share"
                               FontSize="16"
                               FontAttributes="None"
                               FontFamily="Times New Roman"
                               TextColor="Black"/>
                        <Label Text="District Wise VAHAN Registration"
                               FontSize="13"
                               TextColor="#6B7280"/>
                    </VerticalStackLayout>

                    <!-- User Profile -->
                    <VerticalStackLayout Spacing="2">
                        <Label Text="User Profile"
                               FontSize="16"
                               FontAttributes="None"
                               FontFamily="Times New Roman"
                               TextColor="Black"/>
                        <Label Text="User Profile"
                               FontSize="13"
                               TextColor="#6B7280"/>
                    </VerticalStackLayout>

                    <!-- Industry Top 10 -->
                    <VerticalStackLayout Spacing="2">
                        <Label Text="Industry Top 10"
                               FontSize="16"
                               FontAttributes="None"
                               FontFamily="Times New Roman"
                               TextColor="Black"/>
                        <Label Text="Top 10 Industry Leaders 2025"
                               FontSize="13"
                               TextColor="#6B7280"/>
                    </VerticalStackLayout>

                    <!-- Divider -->
                    <BoxView HeightRequest="1"
                            BackgroundColor="#E5E7EB"/>

                    <!-- Logout -->
                    <Label Text="Logout"
                           FontSize="16"
                           FontAttributes="None"
                           FontFamily="Times New Roman"
                           TextColor="Red">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnLogoutClicked"/>
                        </Label.GestureRecognizers>
                    </Label>

                </VerticalStackLayout>
            </ScrollView>
        </Grid>
    </Grid>
</ContentPage>
